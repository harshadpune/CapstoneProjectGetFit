<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.getfit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.GetFitHomeActivity"
            android:theme="@style/ActionBarTheme"/>
        <activity android:name=".ui.FavoriteVideosActivity"
            android:parentActivityName=".ui.GetFitHomeActivity"
            android:theme="@style/ActionBarTheme">
        </activity>
        <activity android:name=".ui.ReportActivity"
            android:theme="@style/ActionBarTheme"
            android:parentActivityName=".ui.GetFitHomeActivity"></activity>
    </application>

</manifest>