<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.GetFitHomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlVideoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true">
                <ImageView
                    android:id="@+id/ivDailyVideo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_200_dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp"/>

                    <ImageView
                        android:id="@+id/ivPlay"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/play_green"
                        android:visibility="gone"/>

                    <ProgressBar
                        android:id="@+id/pbLoading"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvFitnessCards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rlVideoContainer"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/fitness_card_item"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>